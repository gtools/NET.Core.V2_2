@model NET.Core.V2_2.Models.FilesViewModel
@{
    ViewData["Title"] = "文件视图列表";
}

<div class="row">
    <div class="col-sm-12 col-md-6 col-lg-4 mt-3">
        <div class="card">
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action disabled">
                    <i class="fa fa-chevron-right fa-fw" aria-hidden="true"></i> 路径: <b>@Html.DisplayFor(modelItem => Model.Path)</b>
                </a>
                <a class="list-group-item list-group-item-action" asp-area="" asp-controller="FileViews" asp-action="Back">
                    <i class="fa fa-arrow-left fa-fw" aria-hidden="true"></i> 返回上一级
                </a>
                @foreach (var item in Model.FileViewModels)
                {
                    @if (item.DirectoryOrFile)
                    {

                        <a href="#" class="list-group-item list-group-item-action">
                            <i class="fa fa-file-text-o fa-fw" aria-hidden="true"></i> @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    }
                    else
                    {
                        <a href="~/FileViews/?dir=@Html.DisplayFor(modelItem => item.Name)" class="list-group-item list-group-item-action">
                            <i class="fa fa-folder-o fa-fw" aria-hidden="true"></i> @Html.DisplayFor(modelItem => item.Name)
                        </a>
                    }
                }
            </div>
        </div>
    </div>
</div>
